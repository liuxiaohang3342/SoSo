<?xml version="1.0" encoding="utf-8"?>
<com.example.lxh.soso.customview.StickyNavLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sticknavlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sticknav_headerview_id"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop" />

    <com.example.lxh.soso.customview.PagerSlidingTabStrip
        android:id="@+id/sticknav_pagertab_id"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorHeight="3dp"
        app:pstsShouldExpand="true"
        app:pstsUnderlineHeight="1px" />

    <android.support.v4.view.ViewPager
        android:id="@+id/sticknav_viewpager_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.example.lxh.soso.customview.StickyNavLayout>