<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <alpha
        android:duration="500"
        android:fromAlpha="1"
        android:toAlpha="0" />
    <scale
        android:duration="500"
        android:fromXScale="1"
        android:fromYScale="1"
        android:pivotX="0.5"
        android:pivotY="0.5"
        android:toXScale="0"
        android:toYScale="0" />

    <translate
        android:duration="500"
        android:fromXDelta="100%"
        android:toXDelta="0%"/>

</set>